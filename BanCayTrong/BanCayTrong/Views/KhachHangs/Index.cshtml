@model IEnumerable<BanCayTrong.Models.KhachHang>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dienthoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Đã xóa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dienthoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @if (item.Daxoa == 0)
            {
                <td></td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Makh">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Makh">Delete</a>
                </td>
            }
            else
            {
                <td><i class="bi bi-x-circle-fill text-danger"></i></td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Makh">Details</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
