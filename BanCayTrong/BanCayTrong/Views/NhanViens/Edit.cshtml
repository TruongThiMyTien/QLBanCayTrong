@model BanCayTrong.Models.NhanVien

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>NhanVien</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.Manv" name="manv"/>
            <div class="form-group">
                <label class="control-label">Tên</label>
                <input name="ten" value="@Model.Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Điện thoại</label>
                <input name="dienthoai" value="@Model.Dienthoai" class="form-control" />
                <span asp-validation-for="Dienthoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input name="email" value="@Model.Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu mới</label>
                <input name="matkhau" type="hidden" value="@Model.Matkhau" class="form-control" />
                <input name="matkhaumoi" class="form-control" />
                <span asp-validation-for="Matkhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quyền</label><br />
                @if (Model.Quyen == 1)
                {

                    <input type="radio" id="0" name="quyen" value="0"> <label for="0">Nhân viên</label>
                    <input type="radio" id="1" name="quyen" value="1" checked="true"> <label for="1">Quản lý</label>
                }
                else
                {
                    <input type="radio" id="0" name="quyen" value="0" checked="true"> <label for="0">Nhân viên</label>
                    <input type="radio" id="1" name="quyen" value="1" > <label for="1">Quản lý</label>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
