@model BanCayTrong.Models.MatHang
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}


<div>
    <h4>Chi tiết mặt hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-2">
            Giá gốc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Giagoc)
        </dd>
        <dt class="col-sm-2">
            Giá bán
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Giaban)
        </dd>
        <dt class="col-sm-2">
            Số lượng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soluong)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mota)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/mathang/@Model.Hinhanh" />
        </dd>
        <dt class="col-sm-2">
            Danh mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MadmNavigation.Ten)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Trở về trang chính</a>
</div>
