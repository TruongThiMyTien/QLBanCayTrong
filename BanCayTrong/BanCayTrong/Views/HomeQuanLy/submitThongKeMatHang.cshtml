@model IEnumerable<BanCayTrong.Models.CthoaDon>;
@{
    ViewData["Title"] = "Thống kê theo mặt hàng";
}

<h1 class="text-info">Thống kê theo mặt hàng</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="submitThongKeMatHang">
            <div class="form-group">
                <label>Mã mặt hàng</label> <input type="text" name="mamathang" />
            </div>
            <div class="form-group">
                <input class="btn btn-info my-1" type="submit" value="Thống kê" />
            </div>
        </form>
    </div>
</div>

<hr />
<h5>Thông tin mặt hàng</h5>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Mã mặt hàng
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ttmathang.Mamh
        </dd>
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ttmathang.Ten
        </dd>
        <dt class="col-sm-2">
            Giá gốc
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ttmathang.Giagoc
        </dd>
        <dt class="col-sm-2">
            Giá bán
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ttmathang.Giaban
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            <img width="150" src="~/images/mathang/@ViewBag.ttmathang.Hinhanh" />            
        </dd>
    </dl>
</div>
<label>Doanh thu từ mặt hàng: @ViewData["tongtien"] đ</label>
<hr />

<div class="border border-secondary">
    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã hóa đơn</th>
                <th>Ngày lập</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @{
                int stt = 1;
                foreach (CthoaDon cthd in Model)
                {
                        <tr>
                            <td>@stt</td>
                            <td>@cthd.Mahd</td>
                            <td>@cthd.MahdNavigation.Ngay</td>
                            <td>@cthd.Dongia</td>
                            <td>@cthd.Soluong</td>
                            <td>@cthd.Thanhtien</td>
                        </tr>
                }
            }
        </tbody>
    </table>
</div>